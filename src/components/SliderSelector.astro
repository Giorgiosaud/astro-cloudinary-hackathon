---
export interface Props {
    stories: Array<{
        titulo: string;
        imagen: string;
        partes: Array<{
            parte: number;
            descripcion: string;
            opciones: string[];
        }>;
        final: string;
    }>;
}

const { stories } = Astro.props;
---
<div class="container 2xl">
<div class="flex h-[500px] w-full pointer-events-none" id="slider" >
    {stories.map((s) => (
        <a
        href={`/historia/${s.imagen.split('.')[0]}`}
        
            class="flex-auto flex-1 transition-all duration-300 slide"
        >
            <img transition:name={s.imagen.split('.')[0]} src={`/src/assets/historias/${s.imagen}`} alt={s.titulo} class="h-full z-0 object-cover hover:w-100 hover:w-50 transition-all duration-300 hover:z-10" />
            <span transition:name={s.titulo}>{s.titulo}</span>
            
        </a>
    ))}
</div>
</div>
<style>
    button {
        width: 200px;
    }
</style>